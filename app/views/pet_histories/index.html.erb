<p id="notice"><%= notice %></p>




<table class="table table-bordered text-center">
  <thead>
    <tr>
      <th>Weight</th>
      <th>Heigth</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @pet_histories.each do |pet_history| %>
      <tr>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.heigth %></td>
        <td><%= pet_history.description %></td>
        <td><%= link_to 'Show', pet_pet_history_path(@pet,pet_history.id) %></td>
        <td><%= link_to 'Edit', edit_pet_pet_history_path(@pet,pet_history.id) %></td>
        <td><%= link_to 'Destroy', pet_pet_history_path(@pet,pet_history.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


